<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela2">

<!--    <LinearLayout-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content">-->


    <EditText
        android:id="@+id/et_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Id do Dog"
        android:inputType="number"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/et_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nome usuário"
        android:inputType="text"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="95dp" />

    <EditText
        android:id="@+id/et_nomeDog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nome do Dog"
        android:inputType="text"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="95dp"
        app:layout_constraintTop_toBottomOf="@id/et_nome"/>

    <EditText
        android:id="@+id/et_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="184dp"
        app:layout_constraintTop_toBottomOf="@id/et_nomeDog"
        />

    <Switch
        android:id="@+id/indicandoCriancas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indicando Crianças"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="282dp"
        app:layout_constraintTop_toBottomOf="@id/et_senha"
        android:onClick="cadastrando"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/cadastro_tela_2"
        android:backgroundTint="#E91E63"
        app:layout_constraintTop_toBottomOf="@id/indicandoCriancas"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_consulta"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/cadastro_tela_2"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_titulo"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/cadastro_tela_2"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_lista"
        android:orientation="vertical">
    </LinearLayout>

<!--    </LinearLayout>-->

</androidx.constraintlayout.widget.ConstraintLayout>